@model List<Product>

@{
    ViewData["Title"] = "List Product";
}
<h2>List Product</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Description</td>
            <td>@product.Category</td>
            @* <td class="flex"><a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Update</a></td> *@
        </tr>
    }
    </tbody>
</table>